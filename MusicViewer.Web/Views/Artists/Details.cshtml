@model INF148187148204.MusicViewer.Interfaces.IArtist

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Artist</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ID)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    <h5>Artist tracks</h5>
    <table class="table">
    <thead>
        <tr>

            <th>
                    @Html.DisplayName("Name")
            </th>
            <th>
                    @Html.DisplayName("Release Year")
            </th>
            <th>
                    @Html.DisplayName("Genre")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
            @foreach (var item in ViewBag.Tracks)
            {
            <tr>
                <td>
                        @(item.Name)
                </td>
                <td>
                        @(item.ReleaseYear)
                </td>
                <td>
                        @(item.Genre)
                </td>
                <td>
                        @Html.ActionLink("Edit", "Edit", "/Tracks", new { id=item.ID }) |
                        @Html.ActionLink("Details", "Details", "/Tracks", new { id=item.ID }) |
                        @Html.ActionLink("Delete", "Delete", "/Trakcs", new { id=item.ID })
                </td>
            </tr>
            }
    </tbody>
</table>

</div>
<div>
    @Html.ActionLink("Edit", "Edit", new {  id = Model.ID }) |
    <a asp-action="Index">Back to List</a>
</div>

@model IEnumerable<INF148187148204.MusicViewer.Interfaces.ITrack>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<form class="col-md-4" role="search">
    <div class="mb-3">
        <label class="form-label" for="yearOperator">Search</label>
        <input type="text" class="form-control" typeof="search" placeholder="Search" aria-label="Search"
               name="query" value="@ViewBag.Query">

    </div>
    <div class="mb-3">
        <label class="form-label" for="yearOperator">Release Year</label>
		<div class="input-group">
			<select class="form-control" id="yearOperator" name="yearOperator">
				<option selected="@(ViewBag.YearOperator == "<")">&lt;</option>
				<option selected="@(ViewBag.YearOperator == ">")">&gt;</option>
				<option selected="@(ViewBag.YearOperator == "≤")">&le;</option>
				<option selected="@(ViewBag.YearOperator == "≥")">&ge;</option>
				<option selected="@(ViewBag.YearOperator == "=")">=</option>
			</select>
			<input type="number" class="form-control" typeof="search" placeholder="Year" aria-label="Search"
				   name="yearFilter" value="@(ViewBag.YearFilter <= 0 ? null : ViewBag.YearFilter)">
        </div>
		
	</div>
    <div class="mb-3">
		<button class="btn btn-secondary" type="submit">
			<i class="fa fa-search"></i> Search
		</button>
        <a href="@Url.Action("Index", "/Tracks")" class="btn btn-danger">
            <i class="fa fa-close"></i> Clear
        </a>
    </div>
</form>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artist.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
                @Html.ActionLink("Details", "Details", new { id=item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.ID })
            </td>
        </tr>
}
    </tbody>
</table>

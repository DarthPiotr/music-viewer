<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="INF148187148204.MusicViewer.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:INF148187148204.MusicViewer.MAUI"
    Shell.FlyoutBehavior="Disabled"
    Title="INF148187148204.MusicViewer.MAUI">

    <FlyoutItem>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        <ShellContent
            Title="Tracks"
            ContentTemplate="{DataTemplate local:TrackPage}"
            Route="TracksPage" />
        <ShellContent
            Title="Artists"
            ContentTemplate="{DataTemplate local:ArtistPage}"
            Route="ArtistsPage" />
    </FlyoutItem>
    
   

</Shell>
